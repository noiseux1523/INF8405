<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_level"
    tools:context=".Level">

    <ImageView
        android:id="@+id/grid77"
        android:src="@drawable/grid77"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignEnd="@+id/buttonNext"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textLevel" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_exit"
        android:text="EXIT"
        android:id="@+id/buttonExit"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="RETRY"
        android:id="@+id/buttonRetry"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="BACK"
        android:id="@+id/buttonBack"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="NEXT"
        android:id="@+id/buttonNext"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:id="@+id/textLevel"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:text="7x7              Level 1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textAlignment="center" />

