<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_level2_7x7"
    tools:context=".Level2_7x7">

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_exit"
        android:text="EXIT"
        android:id="@+id/buttonExit"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="RETRY"
        android:id="@+id/buttonRetry"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="BACK"
        android:id="@+id/buttonBack"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:background="@drawable/button_boarder"
        android:text="NEXT"
        android:id="@+id/buttonNext"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textLevel"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:text="7x7              Level 2"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textAlignment="center" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttonExit"
        android:layout_below="@+id/buttonBack" />

</RelativeLayout>
